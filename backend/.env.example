# ===================================
# AI TravelTailor Backend - Environment Variables
# ===================================

# Application
# For production deployments set APP_ENV=production and DEBUG=False.
APP_ENV=development
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production

# Database (Supabase PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/traveltailor
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key

# JWT Authentication
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate Limiting / Cache
RATE_LIMIT_DEFAULT=100/minute
RATE_LIMIT_AUTH=5/minute
REDIS_URL=redis://localhost:6379/0
REDIS_TTL_PLACES=900
REDIS_TTL_FLIGHTS=300

# AI Services
OPENAI_API_KEY=sk-your-openai-api-key
LANGCHAIN_API_KEY=your-langchain-api-key
LANGCHAIN_TRACING_V2=false

# External APIs
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
MAPBOX_ACCESS_TOKEN=your-mapbox-access-token
AMADEUS_API_KEY=your-amadeus-api-key
AMADEUS_API_SECRET=your-amadeus-api-secret
BOOKING_COM_AFFILIATE_ID=your-booking-affiliate-id
AGODA_API_KEY=your-agoda-api-key

# CORS
# Comma separated list. Include your production frontend origin when deploying.
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
ALLOWED_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS

# Logging
LOG_LEVEL=INFO

# Observability (optional)
SENTRY_DSN=
SENTRY_SAMPLE_RATE=0.1
POSTHOG_API_KEY=
POSTHOG_HOST=https://app.posthog.com

# Cookie
SESSION_COOKIE_NAME=tt_session
# Use your apex domain in production (e.g., traveltailor.com).
SESSION_COOKIE_DOMAIN=localhost
SESSION_COOKIE_SAMESITE=lax
